      const type = btn.dataset.type;
      
      // Fetch the publication data
      try {
        const endpoint = typeToEndpoint[type];
        const res = await fetch(`${window.NASL.API_BASE}${endpoint}/${id}?id=${id}`, {
          method: "GET",
          headers: { "Content-Type": "application/json" }
        });

        if (!res.ok) throw new Error('Failed to fetch publication details');
        
        const result = await res.json();
        let pubData = null;
        
        if (type === 'journal') {
          pubData = result.data?.journalPaper;
        } else if (type === 'conference') {
          pubData = result.data?.conferencePaper;
        } else if (type === 'patent') {
          pubData = result.data?.patent;
        } else if (type === 'book') {
          pubData = result.data?.book;
        }
        
        if (pubData) {
          pubUI.showEditModal(type, id, pubData);
