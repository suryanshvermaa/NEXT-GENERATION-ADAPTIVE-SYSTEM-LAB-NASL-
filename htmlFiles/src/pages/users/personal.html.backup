              ${type === 'patent' && paper.grantNo ? `<p style="margin-bottom: 8px; color: #555;"><i class="fas fa-certificate" style="color: #254D70; margin-right: 6px; width: 16px;"></i><strong>Grant Number:</strong> ${paper.grantNo}</p>` : ''}
