      const btn = e.target.closest(".delete-btn");
      const id = parseInt(btn.dataset.id);
      const type = btn.dataset.type;
      
      const card = btn.closest('.card');
      const title = card.querySelector('h2')?.textContent || 'this item';
      
      await pubUI.confirmDelete(type, id, title);
    }
  });

  // Global function to reload all publications
  window.loadAllPublications = function() {
    fetchAndRender("journal");
    fetchAndRender("conference");
    fetchAndRender("patent");
