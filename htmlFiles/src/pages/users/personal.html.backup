<script>
  const statusEl = document.getElementById("profile-status");

  function setStatus(message, type) {
    if (!statusEl) return;
    statusEl.classList.remove("d-none", "alert-info", "alert-success", "alert-warning", "alert-danger");
    statusEl.classList.add(type || "alert-info");
    statusEl.textContent = message;
  }

  function clearStatus() {
    if (!statusEl) return;
    statusEl.classList.add("d-none");
    statusEl.textContent = "";
  }

  // Toggle edit profile visibility
  function toggleEditProfile(event) {
    event.preventDefault();
    const editSection = document.getElementById("edit-profile");
    const editBtn = document.getElementById("edit-profile-link");
    
    if (editSection.style.display === "none") {
      editSection.style.display = "block";
      editBtn.textContent = "Cancel Edit";
      editBtn.classList.remove("btn-success");
      editBtn.classList.add("btn-secondary");
      // Scroll to edit section
      editSection.scrollIntoView({ behavior: "smooth", block: "start" });
    } else {
      editSection.style.display = "none";
      editBtn.textContent = "Edit Profile";
      editBtn.classList.remove("btn-secondary");
      editBtn.classList.add("btn-success");
    }
  }

  // Social Links Management
  let socialLinksData = [];

  // Default social platform options with icons
  const defaultSocialPlatforms = {
    LinkedIn: "https://cdn-icons-png.flaticon.com/512/174/174857.png",
    Twitter: "https://cdn-icons-png.flaticon.com/512/733/733579.png",
    GitHub: "https://cdn-icons-png.flaticon.com/512/733/733553.png",
    "Google Scholar": "https://cdn-icons-png.flaticon.com/512/300/300221.png",
    ResearchGate: "https://upload.wikimedia.org/wikipedia/commons/5/5e/ResearchGate_icon_SVG.svg",
    Facebook: "https://cdn-icons-png.flaticon.com/512/733/733547.png",
    Instagram: "https://cdn-icons-png.flaticon.com/512/2111/2111463.png",
    YouTube: "https://cdn-icons-png.flaticon.com/512/733/733646.png",
    Custom: ""
  };

  function loadSocialLinksForEdit(socials) {
    socialLinksData = socials.map(s => ({
      platform: s.platform || "",
      url: s.url || "",
      icon: s.iconURL || ""
    }));
    renderSocialLinksEdit();
  }

  function renderSocialLinksEdit() {
    const container = document.getElementById("socialLinksEdit");
    if (!container) return;

    container.innerHTML = "";
    
    socialLinksData.forEach((social, index) => {
      const row = document.createElement("div");
      row.className = "row g-2 mb-2 align-items-center";
      
      // Create platform dropdown
      let platformOptions = '<option value="">Select Platform</option>';
      for (let platform in defaultSocialPlatforms) {
        const selected = social.platform === platform ? 'selected' : '';
        platformOptions += `<option value="${platform}" ${selected}>${platform}</option>`;
      }
      
      row.innerHTML = `
        <div class="col-md-3">
          <select class="form-control form-control-sm" onchange="updateSocialPlatform(${index}, this.value)">
            ${platformOptions}
          </select>
        </div>
        <div class="col-md-6">
          <input type="url" class="form-control form-control-sm" placeholder="URL" 
                 value="${social.url}" onchange="updateSocialLink(${index}, 'url', this.value)">
        </div>
        <div class="col-md-2">
          ${social.icon ? `<img src="${social.icon}" alt="Icon" style="width:30px; height:30px; object-fit:contain;">` : '<small class="text-muted">No icon</small>'}
        </div>
        <div class="col-md-1">
          <button type="button" class="btn btn-sm btn-danger" onclick="removeSocialLink(${index})">
            <i class="fas fa-trash"></i>
          </button>
        </div>
      `;
      container.appendChild(row);
    });
  }

  function updateSocialPlatform(index, platform) {
    if (socialLinksData[index]) {
      socialLinksData[index].platform = platform;
      // Auto-set icon based on platform
      if (defaultSocialPlatforms[platform]) {
        socialLinksData[index].icon = defaultSocialPlatforms[platform];
      }
      renderSocialLinksEdit();
    }
  }

  function updateSocialLink(index, field, value) {
    if (socialLinksData[index]) {
      socialLinksData[index][field] = value;
    }
  }

  function removeSocialLink(index) {
    socialLinksData.splice(index, 1);
    renderSocialLinksEdit();
  }

  function addSocialLink() {
    socialLinksData.push({ platform: "", url: "", icon: "" });
    renderSocialLinksEdit();
  }

  // Add Social Link button handler
  document.addEventListener("DOMContentLoaded", () => {
    const addBtn = document.getElementById("addSocialLink");
    if (addBtn) {
      addBtn.addEventListener("click", addSocialLink);
    }
  });

  if (!token) {
    setStatus("You are not logged in. Please login to view/edit your profile.", "alert-warning");
  }

  // Get userId from URL parameter or from stored user
  const urlParams = new URLSearchParams(window.location.search);
  let userId = urlParams.get('userId');
  
  // If no userId in URL, use the stored user's ID
  if (!userId && storedUser) {
    userId = storedUser.id;
  }
  
  if (!userId) {
    setStatus("User ID not found. Please login or provide a valid user ID.", "alert-danger");
    throw new Error("No userId available");
  }

  let currentUser = null;

  fetch(`${window.NASL.API_BASE}/api/user/profile/${userId}`)
  .then(response => {
    if (!response.ok) throw new Error("Failed to fetch profile");
    return response.json();
  })
  .then(result => {
    let { user } = result.data;
    currentUser = user || null;
    console.log("User data loaded:", user);

    // Profile image
    const profileImg = document.getElementById("profile_icon");
    if (profileImg) {
      profileImg.src = user.profileImage || "/assets/default-avatar.svg";
      profileImg.alt = user.name || "Profile";
    }

    // Basic Info
    const usernameEl = document.getElementById("username");
    const emailEl = document.getElementById("user_email");
    const designationEl = document.getElementById("user_designation");
    const contactEl = document.getElementById("user_contactNumber");
    const aboutEl = document.getElementById("user_about");

    if (usernameEl) usernameEl.innerText = user.name || "No Name";
    if (emailEl) emailEl.innerHTML = `<i class="fas fa-envelope"></i> ${user.email || "N/A"}`;
    if (designationEl) designationEl.innerHTML = `<strong>Designation:</strong> ${user.designation || "N/A"}`;
    if (contactEl) contactEl.innerHTML = `<i class="fas fa-phone"></i> ${user.contactNumber || "N/A"}`;
    if (aboutEl) aboutEl.innerHTML = user.about || "<i>No about info provided.</i>";

    // Display Social Links dynamically
    const socialLinksContainer = document.getElementById("socialLinksContainer");
    if (socialLinksContainer && user.Social && Array.isArray(user.Social) && user.Social.length > 0) {
      socialLinksContainer.innerHTML = "";
      user.Social.forEach(social => {
        const link = document.createElement("a");
        link.href = social.url;
        link.target = "_blank";
        link.rel = "noopener noreferrer";
        link.className = "social-link-item";
        link.title = social.platform;
        
        if (social.iconURL) {
          const img = document.createElement("img");
          img.src = social.iconURL;
          img.alt = social.platform;
          img.style.width = "40px";
          img.style.height = "40px";
          img.style.objectFit = "contain";
          link.appendChild(img);
        } else {
          const icon = document.createElement("i");
          icon.className = "fas fa-link fa-2x";
          link.appendChild(icon);
        }
        
        socialLinksContainer.appendChild(link);
      });
    } else if (socialLinksContainer) {
      socialLinksContainer.innerHTML = '<small class="text-muted">No social links added</small>';
    }

    // Prefill edit form with current user data
    const editName = document.getElementById("editName");
    const editEmail = document.getElementById("editEmail");
    const editContactNumber = document.getElementById("editContactNumber");
    const editAbout = document.getElementById("editAbout");
    
    if (editName) editName.value = user.name || "";
    if (editEmail) editEmail.value = user.email || "";
    if (editContactNumber) editContactNumber.value = user.contactNumber || "";
    if (editAbout) editAbout.value = user.about || "";

    // Load existing social links into edit form
    loadSocialLinksForEdit(user.Social || []);

    // Update publication counts from user metadata
    const journalCountEl = document.getElementById("journalCount");
    const conferenceCountEl = document.getElementById("conferenceCount");
    const patentCountEl = document.getElementById("patentCount");
    const bookCountEl = document.getElementById("bookCount");

    if (journalCountEl) journalCountEl.innerText = user.journals_count || 0;
    if (conferenceCountEl) conferenceCountEl.innerText = user.conferencePapers_count || 0;
    if (patentCountEl) patentCountEl.innerText = user.patents_count || 0;
    if (bookCountEl) bookCountEl.innerText = user.books_count || 0;

    clearStatus();
    
    // Load all publications after profile data is loaded
    setTimeout(() => {
      if (typeof window.loadAllPublications === 'function') {
        window.loadAllPublications();
      }
    }, 100);

  })
  .catch(error => {
    console.error("Error loading profile data:", error);
    setStatus("Failed to load profile. Please re-login and try again.", "alert-danger");
  });
</script>
<script>
  // Publications section - uses global token and authorId variables

  if (!authorId || Number.isNaN(authorId)) {
    console.warn("Invalid user ID for publications; skipping.");
  }

  const typeToContainerId = {
    journal: "journalContainer",
    conference: "conferenceContainer",
    patent: "patentContainer",
    book: "bookContainer"
  };

  const typeToEndpoint = {
    journal: "/api/journal-paper/get-all-by-user-id",
    conference: "/api/conference-paper/get-all-by-user-id",
    patent: "/api/patent/get-all-by-user-id",
    book: "/api/book/get-all-by-user-id"
  };

  const paginationState = {
    journal: { page: 1, limit: 4, hasMore: true, totalPages: 1 },
    conference: { page: 1, limit: 4, hasMore: true, totalPages: 1 },
    patent: { page: 1, limit: 4, hasMore: true, totalPages: 1 },
    book: { page: 1, limit: 4, hasMore: true, totalPages: 1 }
  };

  function fetchAndRender(type, isLoadMore = false) {
    const container = document.getElementById(typeToContainerId[type]);
    
    if (!isLoadMore) {
      container.innerHTML = `<p>Loading ${type}...</p>`;
      paginationState[type].page = 1;
    }

    const endpoint = typeToEndpoint[type];
    const { page, limit } = paginationState[type];

  fetch(`${window.NASL.API_BASE}${endpoint}/${authorId}?page=${page}&limit=${limit}`, {
      method: "GET",
      headers: {
        "Content-Type": "application/json"
      },
    })
      .then((res) => {
        if (!res.ok) throw new Error(`Failed to fetch ${type}`);
        return res.json();
      })
      .then((result) => {
        console.log(`${type} response:`, result);
        
        let publications = [];
        if (type === 'journal') {
          publications = result.data?.journalPapers || [];
        } else if (type === 'conference') {
          publications = result.data?.conferencePapers || [];
        } else if (type === 'patent') {
          publications = result.data?.patents || [];
        } else if (type === 'book') {
          publications = result.data?.books || [];
        }

        if (!isLoadMore) {
          container.innerHTML = "";
        } else {
          const paginationDiv = container.querySelector('.pagination-controls');
          if (paginationDiv) paginationDiv.remove();
        }

        if (!publications || publications.length === 0) {
          if (!isLoadMore) {
            container.innerHTML = `
              <div style="text-align: center; padding: 60px 20px; background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); border-radius: 12px; border: 2px dashed #dee2e6;">
