              ${type === 'book' && paper.doi ? `<p style="margin-bottom: 8px; color: #555;"><i class="fas fa-link" style="color: #254D70; margin-right: 6px; width: 16px;"></i><strong>DOI:</strong> <a href="https://doi.org/${paper.doi}" target="_blank" style="color: #254D70;">${paper.doi}</a></p>` : ''}
            </div>
