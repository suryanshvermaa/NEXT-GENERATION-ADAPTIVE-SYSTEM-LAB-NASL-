            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
          `;
          card.onmouseenter = () => {
            card.style.boxShadow = '0 6px 20px rgba(0,0,0,0.15)';
            card.style.transform = 'translateY(-3px)';
          };
          card.onmouseleave = () => {
            card.style.boxShadow = '0 2px 8px rgba(0,0,0,0.08)';
            card.style.transform = 'translateY(0)';
          };

          let authorsDisplay = "";
          if (type === 'patent') {
            const inventors = Array.isArray(paper.inventors) ? paper.inventors : [];
            authorsDisplay = inventors.map(inv => typeof inv === 'string' ? inv : inv.name || inv).join(", ") || "N/A";
          } else {
            const authors = Array.isArray(paper.authors) ? paper.authors : [];
            authorsDisplay = authors.map(auth => typeof auth === 'string' ? auth : auth.name || auth).join(", ") || "N/A";
          }

          // Action buttons (Edit & Delete)
          const actionButtons = `
            <div style="position: absolute; top: 10px; right: 10px; display: flex; gap: 8px;">
              <button class="btn btn-sm btn-outline-primary edit-pub-btn" 
                      data-id="${paper.id}" 
                      data-type="${type}" 
                      title="Edit">
                <i class="fas fa-edit"></i>
              </button>
              <button class="btn btn-sm btn-outline-danger delete-pub-btn" 
                      data-id="${paper.id}" 
                      data-type="${type}" 
                      title="Delete">
                <i class="fas fa-trash"></i>
              </button>
