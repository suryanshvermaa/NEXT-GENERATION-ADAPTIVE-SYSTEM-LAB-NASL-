  });

  document.getElementById("collapseConference").addEventListener("show.bs.collapse", () => {
    if (document.getElementById("conferenceContainer").innerHTML === "") {
      fetchAndRender("conference");
    }
  });

  document.getElementById("collapsePatent").addEventListener("show.bs.collapse", () => {
    if (document.getElementById("patentContainer").innerHTML === "") {
      fetchAndRender("patent");
    }
  });

  document.getElementById("collapseBook").addEventListener("show.bs.collapse", () => {
    if (document.getElementById("bookContainer").innerHTML === "") {
      fetchAndRender("book");
    }
  });

</script>

<!-- ✅ Edit profile logic (reuses same endpoints as upd_user.html) -->
<script>
  const editForm = document.getElementById("editProfileForm");
  const editImage = document.getElementById("editProfileImage");

  if (editImage) {
    editImage.addEventListener("change", () => {
      const file = editImage.files && editImage.files[0];
      if (!file) return;
      const profileImg = document.getElementById("profile_icon");
      if (profileImg) profileImg.src = URL.createObjectURL(file);
    });
  }

  async function uploadProfileImage(file, token) {
    const uploadRes = await fetch(`${window.NASL.API_BASE}/api/image/uploadURL`, {
      method: "POST",
      headers: {
        Authorization: `Bearer ${token}`,
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ imageName: file.name }),
    });

    const uploadData = await uploadRes.json();
    if (!uploadRes.ok) {
      throw new Error(uploadData?.message || "Failed to get upload URL");
    }

    const { imageUploadingUrl, imageUrl } = uploadData.data;

    const putRes = await fetch(imageUploadingUrl, {
      method: "PUT",
      headers: { "Content-Type": file.type },
      body: file,
    });
    if (!putRes.ok) throw new Error("Failed to upload image");
    return imageUrl;
  }

  if (editForm) {
    editForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      const token = localStorage.getItem("authToken");
      if (!token) {
        alert("Please login first.");
        return;
      }

      const name = (document.getElementById("editName")?.value || "").trim();
      const email = (document.getElementById("editEmail")?.value || "").trim();
      const contactNumber = (document.getElementById("editContactNumber")?.value || "").trim();
      const about = (document.getElementById("editAbout")?.value || "").trim();
      const password = (document.getElementById("editPassword")?.value || "");
      const passwordConfirm = (document.getElementById("editPasswordConfirm")?.value || "");

      if (password || passwordConfirm) {
        if (password.length < 6) {
          alert("Password must be at least 6 characters.");
          return;
        }
        if (password !== passwordConfirm) {
          alert("Password and confirm password do not match.");
          return;
        }
      }

      try {
        setStatus("Saving changes...", "alert-info");

        const payload = {};
        if (name) payload.name = name;
        if (email) payload.email = email;
        if (contactNumber) payload.contactNumber = contactNumber;
        if (about) payload.about = about;
        if (password) payload.password = password;

        // Add social links - filter out empty ones
        const validSocials = socialLinksData.filter(s => s.platform && s.url);
        if (validSocials.length > 0) {
          payload.social = validSocials;
        }

        const file = editImage && editImage.files && editImage.files[0];
        if (file) {
          payload.profileImage = await uploadProfileImage(file, token);
        }

        if (Object.keys(payload).length === 0) {
          setStatus("Nothing to update.", "alert-warning");
          return;
        }

        const res = await fetch(`${window.NASL.API_BASE}/api/user/updateProfile`, {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
            Authorization: `Bearer ${token}`,
          },
          body: JSON.stringify(payload),
        });

        const result = await res.json();
        if (!res.ok) {
          throw new Error(result?.message || "Failed to update profile");
        }

        setStatus("Profile updated successfully.", "alert-success");
        setTimeout(() => window.location.reload(), 1000);
      } catch (err) {
        console.error(err);
        setStatus(err?.message || "Update failed.", "alert-danger");
      }
    });
  }
</script>

