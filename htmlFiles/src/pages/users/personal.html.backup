          `;

          card.innerHTML = `
            ${actionButtons}
            <div class="card-content" style="padding-right: 80px;">
              <h2 style="font-size: 1.3rem; margin-bottom: 12px; color: #1a1a1a; font-weight: 600;">
                <i class="fas fa-file-alt" style="color: #254D70; margin-right: 8px;"></i>
                ${paper.title || "Untitled"}
              </h2>
              <p style="margin-bottom: 8px; color: #555;">
                <i class="fas fa-users" style="color: #254D70; margin-right: 6px; width: 16px;"></i>
                <strong>${type === 'patent' ? 'Inventors' : 'Authors'}:</strong> 
                <span style="color: #333;">${authorsDisplay}</span>
              </p>
              ${type === 'journal' ? `<p style="margin-bottom: 8px; color: #555;"><i class="fas fa-book" style="color: #254D70; margin-right: 6px; width: 16px;"></i><strong>Journal:</strong> ${paper.journal || "N/A"}</p>` : ''}
              ${type === 'journal' ? `<p style="margin-bottom: 8px; color: #555;"><i class="fas fa-calendar" style="color: #254D70; margin-right: 6px; width: 16px;"></i><strong>Year:</strong> ${paper.year || "N/A"}</p>` : ''}
              ${type === 'journal' && paper.quartile ? `<p style="margin-bottom: 8px; color: #555;"><i class="fas fa-star" style="color: #FFD700; margin-right: 6px; width: 16px;"></i><strong>Quartile:</strong> <span class="badge bg-warning text-dark">${paper.quartile}</span></p>` : ''}
              ${type === 'journal' && paper.doi ? `<p style="margin-bottom: 8px; color: #555;"><i class="fas fa-link" style="color: #254D70; margin-right: 6px; width: 16px;"></i><strong>DOI:</strong> <a href="https://doi.org/${paper.doi}" target="_blank" style="color: #254D70;">${paper.doi}</a></p>` : ''}
              ${type === 'conference' ? `<p style="margin-bottom: 8px; color: #555;"><i class="fas fa-university" style="color: #254D70; margin-right: 6px; width: 16px;"></i><strong>Conference:</strong> ${paper.conference || "N/A"}</p>` : ''}
              ${type === 'conference' ? `<p style="margin-bottom: 8px; color: #555;"><i class="fas fa-calendar" style="color: #254D70; margin-right: 6px; width: 16px;"></i><strong>Year:</strong> ${paper.year || "N/A"}</p>` : ''}
