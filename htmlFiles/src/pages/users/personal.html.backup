        const prevBtn = document.createElement("button");
        prevBtn.className = "btn btn-outline-primary";
        prevBtn.innerHTML = '<i class="fas fa-chevron-left"></i> Previous';
        prevBtn.disabled = page === 1;
        prevBtn.onclick = () => {
          if (page > 1) {
            paginationState[type].page -= 1;
            fetchAndRender(type, false);
            container.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        };

        const pageInfo = document.createElement("span");
        pageInfo.className = "text-muted";
        pageInfo.innerHTML = `Page <strong>${page}</strong> | Showing ${publications.length} items`;

        const nextBtn = document.createElement("button");
        nextBtn.className = "btn btn-outline-primary";
        nextBtn.innerHTML = 'Next <i class="fas fa-chevron-right"></i>';
        nextBtn.disabled = publications.length < limit;
        nextBtn.onclick = () => {
          if (publications.length === limit) {
            paginationState[type].page += 1;
            fetchAndRender(type, false);
            container.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        };

        paginationDiv.appendChild(prevBtn);
        paginationDiv.appendChild(pageInfo);
        paginationDiv.appendChild(nextBtn);
        container.appendChild(paginationDiv);
