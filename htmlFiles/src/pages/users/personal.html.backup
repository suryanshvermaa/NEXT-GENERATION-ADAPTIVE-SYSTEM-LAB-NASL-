              ${type === 'patent' && paper.grantDate ? `<p style="margin-bottom: 8px; color: #555;"><i class="fas fa-calendar-check" style="color: #254D70; margin-right: 6px; width: 16px;"></i><strong>Grant Date:</strong> ${new Date(paper.grantDate).toLocaleDateString()}</p>` : ''}
