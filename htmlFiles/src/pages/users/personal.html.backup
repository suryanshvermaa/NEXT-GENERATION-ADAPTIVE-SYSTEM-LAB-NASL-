      .catch((err) => {
        if (!isLoadMore) {
          container.innerHTML = `
            <div style="text-align: center; padding: 60px 20px; background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); border-radius: 12px; border: 2px dashed #dee2e6;">
